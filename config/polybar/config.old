[colors]
background = #282e3a
background-alt = #d1c4e99
foreground = #e5e9f0
foreground-alt = #282e3a
primary = #ffb52a
secondary = #e60053
alert = #B48EAD

cyan = #88C0D0
aqua = #81a1c1
red = #BF616A
yellow = #EBCB8B
green = #A3BE8C
orange = #D08770
magenta = #b48ead
white = #D8DEE9

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/main]
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

border-size = 0
border-color =

module-margin-left = 0
module-margin-right = 0

font-0 = "Inconsolata CondensedBlack:size=12;3"
font-1 = "SauceCodePro Nerd Font Mono:size=20;5"
font-2 = "Material Icons:pixelsize=15;5"

; MODULES SETUP
modules-left = i3
modules-center = windowtitle
modules-right = cpu memory volume network battery date

tray-position = right
tray-padding = 2
tray-background = #0063ff

cursor-click = pointer
cursor-scroll = pointer

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;    __  __           _       _
;   |  \/  |         | |     | |
;   | \  / | ___   __| |_   _| | ___  ___
;   | |\/| |/ _ \ / _` | | | | |/ _ \/ __|
;   | |  | | (_) | (_| | |_| | |  __/\__ \
;   |_|  |_|\___/ \__,_|\__,_|_|\___||___/

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

index-sort = true
wrapping-scroll = false
pin-workspaces = true

; focused - Active workspace
label-focused = %index%
label-focused-background = #8FBCBB
label-focused-underline  = ${colors.primary}
label-focused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; unfocused - Inactive workspace
label-unfocused = %index%
label-unfocused-padding = 2

; urgent - Workspace with an urgent hint set
label-urgent = %index%
label-urgent-background = ${colors.background}
label-urgent-padding = 2

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/windowtitle]
type = internal/xwindow
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 4

label = [ %title% ]
label-maxlen = 100
label-empty = ""
label-empty-foreground = ${colors.foreground}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/volume]
type = internal/pulseaudio
format-volume =  " <ramp-volume> <label-volume> "
ramp-volume-0 = 
ramp-volume-0-font = 1
ramp-volume-1 = 
ramp-volume-1-font = 1
ramp-volume-2 = 
ramp-volume-2-font = 1
format-volume-background = ${colors.yellow}
format-volume-foreground = ${colors.background}
format-volume-padding = 1

format-muted = <label-muted>
format-muted-background = ${colors.white}
format-muted-foreground = ${colors.background}
label-muted =" 婢 "
format-muted-font = 2

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 99

format-charging = <label-charging>
format-charging-prefix = "⚡ "
format-charging-prefix-font = 2
label-charging = "%percentage%%  "

format-discharging = <label-discharging>
label-discharging = "%percentage%% "
format-discharging-prefix = "  "
format-discharging-prefix-font = 2

format-discharging-background = ${colors.cyan}
format-discharging-foreground = ${colors.background}

format-charging-background = ${colors.orange}
format-charging-foreground = ${colors.background}

label-full = "  "
format-full-background = ${colors.green}
format-full-foreground = ${colors.background}
format-full-prefix-font = 2

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/network]
type = internal/network
interface = wlp2s0
format-connected = <label-connected>
format-connected-prefix = " 直 "
format-connected-prefix-font = 1
label-connected = "%ifname%%downspeed:9% "
label-connected-font = 1

format-disconnected = <label-disconnected>
label-disconnected = 睊
label-disconnected-font = 1

format-connected-background = ${colors.magenta}
format-connected-foreground = ${colors.background}
format-disconnected-background = ${colors.white}
format-disconnected-foreground = ${colors.background}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/memory]
type = internal/memory
; Seconds to sleep between updates
interval = 3

label = "   %percentage_used%%  "

format-prefix-padding = 2
format-prefix-font = 2
format-prefix-foreground = #ffffff
format-background = ${colors.background}
format-foreground = ${colors.foreground}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/cpu]
type = internal/cpu

interval = 1
format = <label>
label = "   %percentage%%  "

format-background = ${colors.aqua}
format-foreground = ${colors.background}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/date]
type = internal/date
interval = 1

date =
date-alt = "  﨟  %A, %b %d -"

time = "   %I:%M %p  "
time-alt = "%I:%M:%S %p  "

;format-prefix = ""
format-prefix-padding = 2
format-prefix-font = 2
format-prefix-foreground = #ffffff
format-background = ${colors.background}
format-foreground = ${colors.foreground}

label = %date% %time%
